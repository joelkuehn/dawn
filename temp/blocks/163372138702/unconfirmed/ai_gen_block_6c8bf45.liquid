{% doc %}
  @prompt
    a stack of buttons to link to varying sites.
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-button-stack-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    gap: {{ block.settings.button_spacing }}px;
    max-width: {{ block.settings.max_width }}px;
    margin: 0 auto;
    padding: {{ block.settings.section_padding }}px;
  }

  .ai-button-stack__button-{{ ai_gen_id }} {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: {{ block.settings.button_padding_vertical }}px {{ block.settings.button_padding_horizontal }}px;
    background-color: {{ block.settings.button_background_color }};
    color: {{ block.settings.button_text_color }};
    border: {{ block.settings.button_border_width }}px solid {{ block.settings.button_border_color }};
    border-radius: {{ block.settings.button_border_radius }}px;
    font-size: {{ block.settings.button_font_size }}px;
    font-weight: {{ block.settings.button_font_weight }};
    text-decoration: none;
    text-align: center;
    cursor: pointer;
    transition: all 0.3s ease;
    width: 100%;
  }

  .ai-button-stack__button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_background_color }};
    color: {{ block.settings.button_hover_text_color }};
    border-color: {{ block.settings.button_hover_border_color }};
    transform: translateY(-2px);
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
  }
{% endstyle %}

<div class="ai-button-stack-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  {% if block.settings.button_1_text != blank and block.settings.button_1_url != blank %}
    <a href="{{ block.settings.button_1_url }}" class="ai-button-stack__button-{{ ai_gen_id }}">
      {{ block.settings.button_1_text }}
    </a>
  {% endif %}

  {% if block.settings.button_2_text != blank and block.settings.button_2_url != blank %}
    <a href="{{ block.settings.button_2_url }}" class="ai-button-stack__button-{{ ai_gen_id }}">
      {{ block.settings.button_2_text }}
    </a>
  {% endif %}

  {% if block.settings.button_3_text != blank and block.settings.button_3_url != blank %}
    <a href="{{ block.settings.button_3_url }}" class="ai-button-stack__button-{{ ai_gen_id }}">
      {{ block.settings.button_3_text }}
    </a>
  {% endif %}

  {% if block.settings.button_4_text != blank and block.settings.button_4_url != blank %}
    <a href="{{ block.settings.button_4_url }}" class="ai-button-stack__button-{{ ai_gen_id }}">
      {{ block.settings.button_4_text }}
    </a>
  {% endif %}

  {% if block.settings.button_5_text != blank and block.settings.button_5_url != blank %}
    <a href="{{ block.settings.button_5_url }}" class="ai-button-stack__button-{{ ai_gen_id }}">
      {{ block.settings.button_5_text }}
    </a>
  {% endif %}
</div>

