{{ 'section-slideshow.css' | asset_url | stylesheet_tag }}

<section id="Slideshow-{{ section.id }}" class="slideshow carousel">
  {%- for block in section.blocks -%} 
  	<div class="slide-item" style="background-image:url({{ block.settings.image | img_url: '1500x' }});">
      <img src="{{block.settings.image | img_url: '1500x' }}" style="display:none;" />
      <div class="page-width">
      {%- if block.settings.title != blank -%}
      	  <h2 class="banner__heading h1" {{ block.shopify_attributes }}>
            <span>{{ block.settings.title | escape }}</span>
          </h2>
        {%- endif -%}
        {%- if block.settings.text != blank -%}
      	  <div class="banner__text" {{ block.shopify_attributes }}>
            {{ block.settings.text }}
          </div>
        {%- endif -%}
		{%- if block.settings.button_label != blank -%}
      		<a{% if block.settings.button_link != blank %} href="{{ block.settings.button_link }}"{% endif %} class="button{% if block.settings.button_style_secondary %} button--secondary{% else %} button--primary{% endif %}"{% if block.settings.button_link == blank %} aria-disabled="true"{% endif %}>{{ block.settings.button_label | escape }}</a>
         {%- endif -%}
      </div>
    </div>
  {%- endfor -%}
</section>

{% schema %}
{
  "name": "t:sections.slideshow.name",
  "class": "shopify-section spaced-section spaced-section--full-width",
  "tag": "section",
  "blocks": [
    {
      "type": "slide",
      "name": "t:sections.slideshow.blocks.slide.name",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "t:sections.slideshow.blocks.slide.settings.image.label"
        },
        {
          "type": "text",
          "id": "title",
          "default": "header",
          "label": "t:sections.slideshow.blocks.slide.settings.title.label"
        },
        {
          "type": "richtext",
          "id": "text",
          "default": "<p>Pair text with an image to focus on your chosen product, collection, or blog post. Add details on availability, style, or even provide a review.</p>",
          "label": "t:sections.slideshow.blocks.slide.settings.text.label"
        },
        {
          "type": "text",
          "id": "button_label",
          "default": "Button label",
          "label": "t:sections.slideshow.blocks.slide.settings.button_label.label"
        },
        {
          "type": "url",
          "id": "button_link",
          "label": "t:sections.slideshow.blocks.slide.settings.button_link.label"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "t:sections.slideshow.presets.name",
      "blocks": [
        {
          "type": "slide"
        },
        {
          "type": "slide"
        },
        {
          "type": "slide"
        }
      ]
    }
  ]
}
{% endschema %}


{% stylesheet %}
{% endstylesheet %}

{% javascript %}
	jQuery(document).ready(function($) {
		$('.slideshow').slick({
            adaptiveHeight: false,
            autoplay: true,
            autoplaySpeed: 5000,
            arrows: false,
            dots: false,
            fade: false,
            //mobileFirst: true,
            // nextArrow: '<button type="button" class="slick-next"><svg class="svg svg-arrow-right"><use xlink:href="#arrow-right"></use></svg>Next</button>',
            // prevArrow: '<button type="button" class="slick-prev"><svg class="svg svg-arrow-left"><use xlink:href="#arrow-left"></use></svg>Prev</button>',
            //slide: '.card-stats-cell',
            slidesToScroll: 1,
            slidesToShow: 4,
            responsive: [
                {
                    breakpoint: 1024,
                    settings: {
                        arrows: false,
                        dots: true,
                        slidesToShow: 2,
                    }
                },
                {
                    breakpoint: 768,
                    settings: {
                        arrows: false,
                        dots: true,
                        slidesToShow: 1,
                    }
                }
            ]
        });
	});

{% endjavascript %}
